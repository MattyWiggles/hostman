<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Entities="clr-namespace:HostLists.Entities;assembly=HostLists">
    
    <DataTemplate DataType="{x:Type Entities:HostEntry}">
        <TextBlock Text="{Binding DomainName}" Style="{StaticResource SubHeadingTextBlockStyle}"
                   Foreground="{Binding Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ListBoxItem}}}"/>
    </DataTemplate>
    
</ResourceDictionary>