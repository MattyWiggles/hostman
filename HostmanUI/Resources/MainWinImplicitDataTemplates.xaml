<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Entites="clr-namespace:HostLists.Entities;assembly=HostLists">
    
    <DataTemplate DataType="{x:Type Entites:Profile}">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding ProfileName}" Style="{StaticResource SubHeadingDarkTextBlockStyle}"
                       Margin="6,0"
                       Foreground="{Binding Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ListBoxItem}}}"/>
        </StackPanel>
    </DataTemplate>
    
</ResourceDictionary>